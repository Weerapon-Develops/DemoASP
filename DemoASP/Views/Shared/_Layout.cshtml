<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DemoASP.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-dark border-bottom box-shadow">
            <div class="container-fluid">

                <!-- ชื่อโปรเจค -->
                <a class="navbar-brand fw-bold"
                   asp-controller="Student"
                   asp-action="Index">
                    ระบบจัดการคะแนนสอบ
                </a>

                <!-- ฝั่งขวา (User + Logout) -->
                <ul class="navbar-nav flex-row ms-auto align-items-center">

                    @if (Context.Session.GetString("Username") == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold"
                               asp-controller="Login"
                               asp-action="Index">
                                🔐 Login
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item me-3">
                            <span class="nav-link text-info">
                                👤 @Context.Session.GetString("Username")
                            </span>
                        </li>

                        <li class="nav-item">
                            <a href="#" class="nav-link text-danger"
                               data-bs-toggle="modal"
                               data-bs-target="#logoutModal">
                                Logout
                            </a>
                        </li>
                    }

                </ul>

            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            @if (Context.Session.GetString("Username") != null)
            {

                <!-- Sidebar เมนูด้านซ้าย -->
                <div class="col-md-2 border-end sidebar" style="background-color:#e7f1ff;">

                    <div class="p-3">

                        <ul class="nav flex-column">

                            <li class="nav-item mb-2">
                                <a class="nav-link text-dark"
                                   asp-controller="Student"
                                   asp-action="Index">
                                    🏠 หน้าแรก
                                </a>
                            </li>

                            <li class="nav-item mb-2">
                                <a class="nav-link text-dark"
                                   asp-controller="Student"
                                   asp-action="Create">
                                    📝 บันทึกข้อมูลนักเรียน
                                </a>
                            </li>

                            <li class="nav-item mb-2">
                                <a class="nav-link text-dark"
                                   asp-controller="Employee"
                                   asp-action="Index">
                                    👨‍💼 แสดงข้อมูลพนักงาน
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Employee"
                                   asp-action="Create">
                                    ➕ บันทึกข้อมูลพนักงาน
                                </a>
                            </li>

                        </ul>
                    </div>

                </div>
            }

            <!-- เนื้อหาหลัก -->
            <div class="col-md-10">
                <main role="main" class="p-4">
                    @RenderBody()
                </main>
            </div>

        </div>
    </div>


    <!-- Modal ยืนยันการออกจากระบบ -->
    <div class="modal fade" id="logoutModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title">ยืนยันการออกจากระบบ</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <p class="fs-5">คุณต้องการออกจากระบบใช่หรือไม่ ?</p>
                </div>

                <div class="modal-footer">
                    <form asp-controller="Login" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-danger">
                            ยืนยันการออกจากระบบ
                        </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            ยกเลิก
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Weerapon Project
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


