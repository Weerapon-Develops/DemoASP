<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DemoASP.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Student" asp-action="Index">ระบบจัดการคะแนนสอบ</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- เมนูฝั่งซ้าย -->
                    <ul class="navbar-nav flex-grow-1">

                        @if (Context.Session.GetString("Username") != null)
                        {
                            <!-- แสดงเมื่อ Login แล้วเท่านั้น -->
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Student" asp-action="Index">หน้าแรก</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Student" asp-action="Create">บันทึกข้อมูล</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Employee" asp-action="Index">แสดงข้อมูลพนักงาน</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Employee" asp-action="Create">บันทึกข้อมูลพนักงาน</a>
                            </li>
                        }

                    </ul>

                    <!-- เมนูฝั่งขวา (Login / Logout) -->
                    <ul class="navbar-nav ms-auto">

                        @if (Context.Session.GetString("Username") == null)
                        {
                            <!-- ยังไม่ Login -->
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold"
                                   asp-controller="Login"
                                   asp-action="Index">
                                    🔐 Login
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- Login แล้ว -->
                            <li class="nav-item">
                                <span class="nav-link text-info">
                                    👤 @Context.Session.GetString("Username")
                                </span>
                            </li>

                            <li class="nav-item">
                                <a href="#" class="nav-link text-danger"
                                   data-bs-toggle="modal"
                                   data-bs-target="#logoutModal">
                                    Logout
                                </a>
                            </li>
                        }

                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Modal ยืนยันการออกจากระบบ -->
    <div class="modal fade" id="logoutModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title">ยืนยันการออกจากระบบ</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <p class="fs-5">คุณต้องการออกจากระบบใช่หรือไม่ ?</p>
                </div>

                <div class="modal-footer">
                    <form asp-controller="Login" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-danger">
                            ยืนยันการออกจากระบบ
                        </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            ยกเลิก
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Weerapon Project
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
