@model IEnumerable<DemoASP.Models.Employee>
@{
    ViewData["Title"] = "พนักงาน";
}

@if (Model.Count() > 0)
{
    <h1 class="text-center mb-3">ข้อมูลพนักงาน</h1>

    <div class="text-end" style="padding:10px;">
        <button class="btn btn-success"
                data-bs-toggle="modal"
                data-bs-target="#createEmployeeModal">
            + เพิ่มข้อมูล
        </button>
    </div>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>รหัสพนักงาน</th>
                <th>ชื่อพนักงาน</th>
                <th>นามสกุลพนักงาน</th>
                <th>อีเมล์</th>
                <th>เบอร์โทร</th>
                <th>เงินเดือน</th>
                <th>วันเริ่มงาน</th>
                <th>สถานะพนักงาน</th>
                <th></th>
                <th></th>
            </tr>

        </thead>
        <tbody>
            @foreach (var Employee in Model)
            {
                <tr>
                    <td>@Employee.EmployeeId</td>
                    <td>@Employee.FirstName</td>
                    <td>@Employee.LastName</td>
                    <td>@Employee.Email</td>
                    <td>@Employee.PhoneNumber</td>
                    <td>@Employee.Salary</td>
                    <td>@Employee.HireDate.ToString("dd/MM/yyyy")</td>
                    <td>@(Employee.IsActive ? "Inactive" : "Active")</td>
                    <td>
                        <button class="btn btn-warning"
                                onclick="openEditModal(@Employee.EmployeeId)">
                            แก้ไข
                        </button>
                    </td>
                    <td>
                        @*             <a class="btn btn-danger"
                           asp-controller="Employee"
                           asp-action="Delete"
                           asp-route-id="@Employee.EmployeeId"
                           onclick="return confirm('คุณต้องการลบ @Employee.FirstName @Employee.LastName  หรือไม่ ?')">ลบ</a> *@
                        <button class="btn btn-danger"
                                onclick="confirmDelete(@Employee.EmployeeId, '@Employee.FirstName', '@Employee.LastName')">
                            ลบ
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-secondary">ไม่มีข้อมูลนักเรียนในระบบ</div>
}


<!-- Modal เพิ่มพนักงาน -->
<div class="modal fade" id="createEmployeeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">เพิ่มข้อมูลพนักงาน</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form asp-controller="Employee" asp-action="Create" method="post">
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>ชื่อ</label>
                            <input name="FirstName" class="form-control" required />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>นามสกุล</label>
                            <input name="LastName" class="form-control" required />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>อีเมล์</label>
                            <input name="Email" type="email" class="form-control" />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>เบอร์โทร</label>
                            <input name="PhoneNumber" class="form-control" />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>เงินเดือน</label>
                            <input name="Salary" type="number" class="form-control" />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>วันเริ่มงาน</label>
                            <input name="HireDate" type="date" class="form-control" />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>สถานะพนักงาน</label>
                            <select name="IsActive" class="form-control">
                                <option value="false">Active</option>
                                <option value="true">Inactive</option>
                            </select>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">บันทึก</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                </div>
            </form>

        </div>
    </div>
</div>

<!-- Modal แก้ไขพนักงาน -->
<div class="modal fade" id="editEmployeeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">แก้ไขข้อมูลพนักงาน</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form asp-controller="Employee" asp-action="Edit" method="post">
                <div class="modal-body">

                    <!-- Hidden Id -->
                    <input type="hidden" id="editEmployeeId" name="EmployeeId" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>ชื่อ</label>
                            <input id="editFirstName" name="FirstName" class="form-control" required />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>นามสกุล</label>
                            <input id="editLastName" name="LastName" class="form-control" required />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>อีเมล์</label>
                            <input id="editEmail" name="Email" type="email" class="form-control" />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>เบอร์โทร</label>
                            <input id="editPhone" name="PhoneNumber" class="form-control" />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>เงินเดือน</label>
                            <input id="editSalary" name="Salary" type="number" class="form-control" />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>วันเริ่มงาน</label>
                            <input id="editHireDate" name="HireDate" type="date" class="form-control" />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>สถานะพนักงาน</label>
                            <select id="editIsActive" name="IsActive" class="form-control">
                                <option value="false">Active</option>
                                <option value="true">Inactive</option>
                            </select>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">อัปเดตข้อมูล</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                </div>
            </form>

        </div>
    </div>
</div>

<!-- Modal ยืนยันการลบ -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">ยืนยันการลบข้อมูล</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <p id="deleteMessage" class="fs-5"></p>
            </div>

            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    <button type="submit" class="btn btn-danger">ยืนยันการลบ</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openEditModal(id) {
            fetch('/Employee/GetEmployeeById?id=' + id)
                .then(response => response.json())
                .then(data => {
                    // ใส่ข้อมูลลง input
                    document.getElementById('editEmployeeId').value = data.employeeId;
                    document.getElementById('editFirstName').value = data.firstName;
                    document.getElementById('editLastName').value = data.lastName;
                    document.getElementById('editEmail').value = data.email;
                    document.getElementById('editPhone').value = data.phoneNumber;
                    document.getElementById('editSalary').value = data.salary;
                    document.getElementById('editHireDate').value = data.hireDate.split('T')[0];
                    document.getElementById('editIsActive').value = data.isActive;

                    // เปิด Modal
                    var myModal = new bootstrap.Modal(document.getElementById('editEmployeeModal'));
                    myModal.show();
                });
        }

        function confirmDelete(id, firstName, lastName) {
            // เปลี่ยนข้อความใน Modal
            document.getElementById('deleteMessage').innerText =
                `คุณต้องการลบ ${firstName} ${lastName} หรือไม่ ?`;

            // ตั้งค่า action ของ form ให้ไปที่ Delete
            document.getElementById('deleteForm').action = '/Employee/Delete/' + id;

            // เปิด Modal
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
}